{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
	    "quotes": ["error", "single"],
        "semi": [2, "always"],
        "eqeqeq": "error",
        "comma-spacing": ["error", { "before": false, "after": true }],
        "no-async-promise-executor": 0,
        "no-unused-vars": [
            "error",
            {
              "varsIgnorePattern": "expect"
            }
          ]
    }
}
